<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>Cadastrar Usuário</h1>
    <form action="/usuarios" method="post">
        <input type="email" name="email" placeholder="Email" required>
        <input type="password" name="senha" placeholder="Senha" required>
        <input type="text" name="nome" placeholder="nome" required>
        <label>Classe:</label>
        <select name="classe" required>
            <option value="">Selecione uma classe</option>
            <option value="Guerreiro">Guerreiro</option>
            <option value="Mago">Mago</option>
            <option value="Arqueiro">Arqueiro</option>
            <option value="Assassino">Assassino</option>
        </select><br>
        <button type="submit">Cadastrar</button>
    </form>

    <hr> 
    <% if (usuarios.length == 0) { %>
        <p>Nenhum usuário</p>
    <% } else { %> 
        <table> 
            <tbody>
                <% usuarios.forEach(u => { %>
                <tr>
                    <td><%= u.id %></td>
                    <td><%= u.nome %></td>
                    <td><%= u.email %></td>
                    <td><%= u.classe %></td>
                    <td class="actions">
                    <!-- Form para editar -->
                    <form action="/usuarios/editar/<%= u.id %>" method="POST">
                        <select name="coluna" required>
                        <option value="nome">Nome</option>
                        <option value="email">Email</option>
                        <option value="classe">Classe</option>
                        </select>
                        <input type="text" name="novo_valor" placeholder="Novo valor" required>
                        <button type="submit">Editar</button>
                    </form>

                    <!-- Form para deletar -->
                    <form action="/usuario/deletar/<%= u.id %>" method="POST" onsubmit="return confirm('Deseja realmente deletar este usuário?')">
                        <button type="submit">Deletar</button>
                    </form>
                    </td>
                </tr>
                <% }) %>
            </tbody>
            </table>
        <% } %>
</body>
</html>